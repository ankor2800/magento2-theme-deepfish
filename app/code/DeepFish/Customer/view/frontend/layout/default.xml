<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.panel.right">
            <block class="DeepFish\Customer\Block\Account\AuthorizationLink" name="head.panel.right.auth"
                   template="DeepFish_Customer::account/link/authorization.phtml" />
        </referenceContainer>

        <move element="head.panel.right.auth" destination="header.panel.right" after="currency" />

        <referenceBlock name="footer_links">
            <block class="DeepFish\Customer\Block\Account\AuthorizationLink" name="footer.links.auth"
                   template="DeepFish_Customer::account/link/footer.phtml">
                <arguments>
                    <argument name="sortOrder" xsi:type="number">150</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>

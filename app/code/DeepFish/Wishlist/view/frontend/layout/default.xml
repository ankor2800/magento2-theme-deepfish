<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="common.head.components">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="*" xsi:type="array">
                        <item name="Magento_Ui/js/core/app" xsi:type="array">
                            <item name="components" xsi:type="array">
                                <item name="wishlist" xsi:type="array">
                                    <item name="config" xsi:type="array">
                                        <item name="sidebarMaxItems"
                                              xsi:type="helper"
                                              helper="DeepFish\Wishlist\Override\CustomerData\Wishlist::getSidebarItemsNumber"
                                        />
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>

<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Magento\Framework\View\Element\Html\Link" name="top.links.blog">
                <arguments>
                    <argument name="path" xsi:type="helper" helper="IdealCode\Blog\Helper\Blog::getBlogUrl" />
                    <argument name="label" xsi:type="string">Blog</argument>
                    <argument name="sortOrder" xsi:type="number">30</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>

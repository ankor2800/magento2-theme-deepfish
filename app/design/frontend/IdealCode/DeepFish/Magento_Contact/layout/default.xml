<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="contact-us-link" remove="true" />

        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link" ifconfig="contact/contact/enabled"
                   name="footer.links.contact">
                <arguments>
                    <argument name="label" xsi:type="string">Contact Us</argument>
                    <argument name="path" xsi:type="string">contact</argument>
                    <argument name="sortOrder" xsi:type="number">110</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>

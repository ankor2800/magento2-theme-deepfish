<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="category.products.list">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="Magento_Ui/js/core/app" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="productList" xsi:type="array">
                                <item name="children" xsi:type="array">
                                    <item name="addToCart" xsi:type="array">
                                        <item name="component" xsi:type="string">Magento_Checkout/js/view/cart</item>
                                        <item name="config" xsi:type="array">
                                            <item name="template" xsi:type="string">
                                                Magento_Checkout/catalog/product/list/add-to/cart
                                            </item>
                                            <item name="displayArea" xsi:type="string">
                                                addToCart
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>

<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block name="footer.links.sitemap" class="Magento\Framework\View\Element\Html\Link">
                <arguments>
                    <argument name="label" xsi:type="string">Site map</argument>
                    <argument name="path" xsi:type="string">sitemap</argument>
                    <argument name="sortOrder" xsi:type="number">50</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>

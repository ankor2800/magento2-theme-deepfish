<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="category.description" destination="main" after="page.main.title" />
        <referenceContainer name="category.view.container" remove="true" />

        <referenceBlock name="category.products.list">
            <arguments>
                <argument name="show_toolbar" xsi:type="boolean">true</argument>
                <argument name="show_pager" xsi:type="boolean">true</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>

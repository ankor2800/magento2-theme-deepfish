<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Remove unused JS -->
        <referenceBlock name="js_cookies" remove="true" />

        <referenceContainer name="head.components">
            <block name="common.head.components" template="Magento_Theme::js/components.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name=".header [data-role=dropdown-dialog]" xsi:type="array">
                            <item name="js/dropdown-dialog" xsi:type="array">
                                <item name="dialogContentClass" xsi:type="string">active</item>
                            </item>
                        </item>
                        <item name=".panel .switcher [data-role=dropdown-dialog]" xsi:type="array">
                            <item name="js/dropdown-dialog" xsi:type="array">
                                <item name="show" xsi:type="array">
                                    <item name="effect" xsi:type="string">blind</item>
                                </item>
                                <item name="hide" xsi:type="array">
                                    <item name="effect" xsi:type="string">blind</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>

        <!-- Header panel -->
        <referenceContainer name="header.panel.wrapper" htmlClass="panel" />

        <referenceContainer name="header.panel" htmlClass="content">
            <container name="header.panel.right" htmlTag="div" htmlClass="right">
                <container name="header.panel.right.socials" htmlTag="div" htmlClass="socials" before="store_language"
                           after="header">
                    <block name="socials.facebook" template="Magento_Theme::html/socials.phtml" >
                        <arguments>
                            <argument name="href" xsi:type="string">https://www.facebook.com/</argument>
                            <argument name="icon_name" xsi:type="string">fa-facebook</argument>
                        </arguments>
                    </block>
                    <block name="socials.twitter" template="Magento_Theme::html/socials.phtml" >
                        <arguments>
                            <argument name="href" xsi:type="string">https://twitter.com/</argument>
                            <argument name="icon_name" xsi:type="string">fa-twitter</argument>
                        </arguments>
                    </block>
                    <block name="socials.google" template="Magento_Theme::html/socials.phtml" >
                        <arguments>
                            <argument name="href" xsi:type="string">https://plus.google.com/</argument>
                            <argument name="icon_name" xsi:type="string">fa-google-plus</argument>
                        </arguments>
                    </block>
                </container>
            </container>
        </referenceContainer>

        <!-- Remove skip block-->
        <referenceBlock name="skip_to_content" remove="true" />

        <!-- Welcome block-->
        <move element="header" destination="header.panel.right" before="-" />

        <!-- Top links block-->
        <referenceBlock name="top.links">
            <arguments>
                <argument name="css_class" xsi:type="string">links</argument>
            </arguments>
        </referenceBlock>

        <!-- Header body -->
        <referenceContainer name="header-wrapper">
            <container name="header.inner.right" htmlTag="div" htmlClass="right" />
        </referenceContainer>

        <referenceBlock name="logo">
            <arguments>
                <argument name="theme_name" xsi:type="string">deepfish</argument>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_img_width" xsi:type="number">274</argument>
                <argument name="logo_img_height" xsi:type="number">58</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="header.container">
            <container name="header.navigation" htmlTag="div" htmlClass="navigation" >
                <container name="header.navigation.content" htmlTag="div" htmlClass="content" >
                    <container name="header.navigation.content.wrapper" htmlTag="div" htmlClass="wrapper" />
                </container>
            </container>
        </referenceContainer>

        <referenceBlock name="navigation.sections" remove="true" />
        <move element="breadcrumbs" destination="header.container" />
    </body>
</page>

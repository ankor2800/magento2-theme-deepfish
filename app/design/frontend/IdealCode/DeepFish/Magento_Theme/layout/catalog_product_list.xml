<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="catalog.product.list">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="children" xsi:type="array">
                        <item name="pager" xsi:type="array">
                            <item name="component" xsi:type="string">Magento_Theme/js/html/pager</item>
                            <item name="config" xsi:type="array">
                                <item name="template" xsi:type="string">Magento_Theme/html/pager</item>
                                <item name="displayArea" xsi:type="string">pager</item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
